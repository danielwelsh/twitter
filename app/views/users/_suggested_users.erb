<div class="suggested-users-container section-borders">
  <% @suggested_users.each do |suggested_user| %>

    <div class="suggested-user-container">
      <div class="create-tweet-profile-image"><img src="<%= suggested_user.profile_image_location %>" height="36px"></div>

      <div class="follow-info">
        <a class="suggested-user-name" href="<%="/#{suggested_user.handle}" %>"><%= "#{suggested_user.full_name}"  %></a>
        <a class="tweet-extra-info" href="<%="/#{suggested_user.handle}" %>"><%= "@#{suggested_user.handle}" %></a>

        <form action="/<%= suggested_user.handle %>/follow" method="POST" >
          <button class="follow-button" type="submit">Follow</button>
        </form>
      </div>

    </div>

  <% end %>
</div>