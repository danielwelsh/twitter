<% @tweets.each do |tweet| %>
  <div class="tweet-container">
      <div>
        <div class="tweet-info">
          <a id="tweet-user-name" href="<%="/#{tweet.user.handle}" %>"><%= "#{tweet.user.full_name}"  %></a>
          <a class="" ="tweet-extra-info" href="<%="/#{tweet.user.handle}" %>"><%= "@#{tweet.user.handle}" %></a>
          <a class="" ="tweet-extra-info" href="<%= "/#{tweet.user.handle}" %>"><%= "#{tweet.date}"  %></a>
        </div>

        <div class="tweet-text">
          <%= "#{parse_tweet_for_hashtags(tweet.tweet)}" %>
        </div>


        <div class="tweet-interaction">

          <form action="<%= "/tweets/#{tweet.id}/retweet" %>" method="POST">
            <input type="hidden" name="tweet_id" value="#{tweet.id}">
            <input type="hidden" name="_method" value="put">
            <button type="submit">&#8617; Reply</button>

          </form>


<!-- likes functionality start -->
          <% if tweet.liked?(current_user) %>
            <form action="<%= "/tweets/#{tweet.id}/like" %>" method="POST">
              <input type="hidden" name="_method" value="delete">
              <input type="hidden" name="tweet_id" value="#{tweet.id}">
              <button class="liked-heart" type="submit">&#x2764;</button>
            </form>
          <% else %>
            <form action="<%= "/tweets/#{tweet.id}/like" %>" method="POST">
              <input type="hidden" name="tweet_id" value="#{tweet.id}">
              <button type="submit">&#x2764;</button>
            </form>
          <% end %>
              <span><a href=""><%= tweet.likes_count %></a></span>
<!-- likes functionality end-->
<!-- retweet functionality start -->
          <% if tweet.own_tweet?(current_user) %>
            <span>&#9851; <a href=""><%= tweet.retweets_count %></a></span>
          <% else %>
            <% if tweet.retweeted?(current_user) %>
              <form action="<%= "/tweets/#{tweet.id}/retweet" %>" method="POST">
                <input type="hidden" name="_method" value="delete">
                <button class="retweeted-symbol" type="submit" >&#9851;</button>
                <span><a href=""><%= tweet.retweets_count %></a></span>
              </form>
            <% else %>
              <form action="<%= "/tweets/#{tweet.id}/retweet" %>" method="POST">
                <button type="submit" >&#9851;</button>
                <span><a href=""><%= tweet.retweets_count %></a></span>
              </form>
            <% end %>
          <% end %>
<!-- retweet functionality end -->


        </div>
      </div>
  </div>
<% end %>
